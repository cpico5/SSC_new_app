<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/estadisticas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="Salir"
    tools:context=".MainActivityMapa" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/layPreg11"
            android:layout_width="match_parent"
            android:layout_height="1075dp"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textPregunta11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mencione las 3 necesidades de Servicio"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#669900"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <CheckBox
                    android:id="@+id/chkLuminaria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luminaria" />

                <CheckBox
                    android:id="@+id/chkBacheo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bacheo" />

                <CheckBox
                    android:id="@+id/chkDesasolve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desasolve" />

                <CheckBox
                    android:id="@+id/chkVehiculos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Retiro de Vehículos abandonados" />

                <CheckBox
                    android:id="@+id/chkAgua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subministro de agua" />

                <CheckBox
                    android:id="@+id/chkBanquetas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reparación de banquetas" />

                <CheckBox
                    android:id="@+id/chkLimpieza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servicio de limpieza" />


            </LinearLayout>
            
           
      

            <!-- //////////////////////////////////////  BOTONES  /////////////// -->
        </LinearLayout>
    </ScrollView>

</RelativeLayout>