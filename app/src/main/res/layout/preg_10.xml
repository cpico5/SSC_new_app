<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/estadisticas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="Salir"
    tools:context=".MainActivityMapa" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/layPreg10"
            android:layout_width="match_parent"
            android:layout_height="1075dp"
            android:orientation="vertical" >

      
            
                          
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical" >


                  <TextView
                      android:id="@+id/textPregunta10"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Mencione las 3 necesidades en Seguridad que considere más importantes en su colonia"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:textColor="#669900"
                      android:textSize="20dp"
                      android:textStyle="bold" />

<CheckBox
        android:id="@+id/chkCamaras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cámaras de vigilancia" />
		
    <CheckBox
        android:id="@+id/chkPolicia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Presencia policial"/>

    <CheckBox
        android:id="@+id/chkDroga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Combatir la venta la venta de droga" />     
        
    <CheckBox
        android:id="@+id/chkRobos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Combatir los robos" />     
        
    <CheckBox
        android:id="@+id/chkConsumo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Combatir el consumo de sustancias embriagantes y tóxicas en vía pública" />     
        
                           
            </LinearLayout>
            
           
      

            <!-- //////////////////////////////////////  BOTONES  /////////////// -->
        </LinearLayout>
    </ScrollView>

</RelativeLayout>