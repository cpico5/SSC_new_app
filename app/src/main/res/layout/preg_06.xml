<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/estadisticas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="Salir"
    tools:context=".MainActivityMapa" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:id="@+id/layPreg6"
            android:layout_width="match_parent"
            android:layout_height="1075dp"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textPregunta6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="¿El Jefe de Cuadrante le explicó en que consiste la aplicación “Mi Policía” ?"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#669900"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/rdPregunta6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:orientation="horizontal"
                    android:showDividers="middle">

                    <RadioButton
                        android:id="@+id/radio1"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="20dp"
                        android:background="@drawable/radio_personalizado"
                        android:button="@android:color/transparent"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="Si"
                        android:textColor="@drawable/radio_text_color" />

                    <RadioButton
                        android:id="@+id/radio2"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:background="@drawable/radio_personalizado"
                        android:button="@android:color/transparent"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="No"
                        android:textColor="@drawable/radio_text_color" />

                </RadioGroup>

            </LinearLayout>
            
           
      

            <!-- //////////////////////////////////////  BOTONES  /////////////// -->
        </LinearLayout>
    </ScrollView>

</RelativeLayout>